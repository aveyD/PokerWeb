<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd"
      start-state="poker">

<!-- 	<on-start> -->
<!-- 		<evaluate expression="pokerController.initBean()" result="flowScope.bean" /> -->
<!-- 	</on-start> -->
	<var name="bean" class="poker.Bean" />

	<view-state id="poker" model="bean">
		<transition on="deal" to="deal" />
	</view-state>
	
	<action-state id="deal">
		<evaluate expression="pokerController.dealPoker(bean)" />
		<transition on="yes" to="poker" />
		<transition on="no" to="poker" />
	</action-state>

</flow>